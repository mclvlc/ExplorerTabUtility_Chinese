<Window x:Class="ExplorerTabUtility.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ExplorerTabUtility.UI.Views"
        xmlns:managers="clr-namespace:ExplorerTabUtility.Managers"
        Title="文件资源管理器标签工具"
        Width="850" Height="600"
        MinWidth="700" MinHeight="175"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        TextBlock.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}">

    <Border Background="{StaticResource BackgroundGradientBrush}"
            BorderBrush="{StaticResource BorderGradientBrush}"
            CornerRadius="5"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border x:Name="TitleBar" Grid.Row="0" Background="{StaticResource TitleBarBrush}" CornerRadius="4, 4, 0, 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- 菜单按钮 -->
                    <ToggleButton x:Name="DrawerButton" Grid.Column="0" Style="{StaticResource ToggleButtonIconStyle}" Margin="6,0,0,0"
                                  Content="&#x2630;" Focusable="False" ToolTip="打开应用菜单" />

                    <!-- 窗口标题 -->
                    <TextBlock Grid.Column="1" Text="文件资源管理器标签工具" VerticalAlignment="Center" Margin="8,0"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontWeight="SemiBold"
                               FontSize="14" />

                    <!-- 窗口控制按钮 -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="MinimizeButton" Style="{StaticResource IconButtonStyle}" Content="&#x2212;" Focusable="False" />
                        <Button x:Name="MaximizeButton" Focusable="False">
                            <Button.Style>
                                <Style BasedOn="{StaticResource IconButtonStyle}" TargetType="Button">
                                    <Setter Property="Content" Value="&#x2610;" />
                                    <Style.Triggers>
                                        <DataTrigger
                                            Binding="{Binding WindowState, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                                            Value="Maximized">
                                            <Setter Property="Content" Value="&#x2750;" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="CloseButton" Style="{StaticResource IconButtonStyle}" Content="&#x2715;" Focusable="False"
                                Margin="0,0,8,0" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 主内容区 -->
            <Grid Grid.Row="1">
                <!-- 自定义抽屉菜单 -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- 菜单抽屉 -->
                    <Border Grid.Column="0"
                            Background="{StaticResource CardGradientBrush}"
                            BorderBrush="{StaticResource BorderGradientBrush}"
                            BorderThickness="0,0,1,0"
                            CornerRadius="0,0,0,4"
                            Width="0">
                        <DockPanel>
                            <ListBox x:Name="NavigationList" DockPanel.Dock="Top" SelectedIndex="0"
                                     Style="{StaticResource NavigationListBoxStyle}">
                                <ListBox.Resources>
                                    <Storyboard x:Key="CloseDrawerStoryboard">
                                        <BooleanAnimationUsingKeyFrames Storyboard.TargetName="DrawerButton"
                                                                        Storyboard.TargetProperty="IsChecked">
                                            <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="False" />
                                        </BooleanAnimationUsingKeyFrames>
                                    </Storyboard>
                                </ListBox.Resources>
                                <ListBox.Triggers>
                                    <EventTrigger RoutedEvent="ListBox.MouseLeftButtonDown">
                                        <BeginStoryboard Storyboard="{StaticResource CloseDrawerStoryboard}"/>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="ListBox.PreviewMouseDoubleClick">
                                        <BeginStoryboard Storyboard="{StaticResource CloseDrawerStoryboard}"/>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="ListBox.KeyDown">
                                        <BeginStoryboard Storyboard="{StaticResource CloseDrawerStoryboard}"/>
                                    </EventTrigger>
                                </ListBox.Triggers>
                                <ListBoxItem ToolTip="配置键盘和鼠标快捷键">
                                    <TextBlock Text="&#x1F5F2;  快捷键" VerticalAlignment="Center" />
                                </ListBoxItem>
                                <ListBoxItem ToolTip="配置应用设置">
                                    <TextBlock Text="&#xE713;  偏好设置" VerticalAlignment="Center" />
                                </ListBoxItem>
                                <ListBoxItem ToolTip="关于应用和支持选项">
                                    <TextBlock Text="&#xE939;  关于" VerticalAlignment="Center" />
                                </ListBoxItem>
                            </ListBox>
                        </DockPanel>

                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="4" Opacity="0.3" Color="{StaticResource ShadowColor}" />
                        </Border.Effect>

                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=DrawerButton}" Value="True">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"
                                                                     BeginTime="0:0:0.1" />
                                                    <DoubleAnimation Storyboard.TargetProperty="Width" To="165" Duration="0:0:0.3">
                                                        <DoubleAnimation.EasingFunction>
                                                            <CubicEase EasingMode="EaseOut" />
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                        <DataTrigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2" />
                                                    <DoubleAnimation Storyboard.TargetProperty="Width" To="0" Duration="0:0:0.3">
                                                        <DoubleAnimation.EasingFunction>
                                                            <CubicEase EasingMode="EaseIn" />
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>

                    <!-- 主内容 -->
                    <Grid Grid.Column="1">
                        <!-- 标签页控件 -->
                        <TabControl Style="{StaticResource CustomTabControlStyle}"
                                    SelectedIndex="{Binding SelectedIndex, ElementName=NavigationList}">
                            <TabControl.Effect>
                                <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity="0.2"
                                                  Color="{StaticResource ShadowColor}" />
                            </TabControl.Effect>
                            <!-- 快捷键标签页 -->
                            <TabItem Header="快捷键" Visibility="Collapsed">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <!-- 工具栏 -->
                                    <DockPanel Grid.Row="0" Margin="16,8" LastChildFill="False">
                                        <!-- 操作按钮 -->
                                        <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                            <Button x:Name="BtnNewProfile" Content="新建" Style="{StaticResource FlatButtonStyle}"
                                                    ToolTip="创建新配置文件" />
                                            <Button x:Name="BtnImport" Content="导入" Style="{StaticResource FlatButtonStyle}"
                                                    ToolTip="从文件导入配置文件" />
                                            <Button x:Name="BtnExport" Content="导出" Style="{StaticResource FlatButtonStyle}"
                                                    ToolTip="导出配置文件到文件" />
                                            <Button x:Name="BtnSave" Content="保存" Style="{StaticResource FlatButtonStyle}"
                                                    ToolTip="保存所有配置文件更改" />
                                        </StackPanel>

                                        <!-- 退出时自动保存选项 -->
                                        <CheckBox DockPanel.Dock="Right" x:Name="CbAutoSaveProfiles"
                                                  Content="自动保存" Style="{StaticResource CustomCheckBoxStyle}"
                                                  ToolTip="关闭窗口时自动保存配置文件" />
                                    </DockPanel>

                                    <!-- 配置文件面板 -->
                                    <ScrollViewer Grid.Row="1" Margin="16,8,4,4"
                                                  VerticalScrollBarVisibility="Visible"
                                                  Style="{StaticResource CustomScrollViewerStyle}">
                                        <StackPanel x:Name="ProfilesPanel" />
                                    </ScrollViewer>
                                </Grid>
                            </TabItem>

                            <!-- 偏好设置标签页 -->
                            <TabItem Header="偏好设置" Visibility="Collapsed">
                                <StackPanel Margin="16, 8">
                                    <GroupBox Header="应用设置"
                                              Style="{StaticResource CustomGroupBoxStyle}">
                                        <StackPanel Margin="8">
                                            <CheckBox x:Name="CbAutoUpdate" Content="自动更新"
                                                      Style="{StaticResource CustomCheckBoxStyle}"
                                                      ToolTip="启动时自动检查更新" />
                                            <CheckBox x:Name="CbThemeIssue" Content="我遇到主题问题"
                                                      Style="{StaticResource CustomCheckBoxStyle}"
                                                      ToolTip="使用替代窗口隐藏方法以保留自定义文件资源管理器主题。
启用此选项如果你遇到主题相关问题" />
                                            <CheckBox x:Name="CbSaveClosedHistory" Content="保存关闭历史"
                                                      Style="{StaticResource CustomCheckBoxStyle}"
                                                      ToolTip="保存已关闭窗口历史记录，以便稍后重新打开（重新打开已关闭项、标签页搜索）" />
                                            <CheckBox x:Name="CbRestorePreviousWindows" Content="恢复之前的窗口"
                                                      Style="{StaticResource CustomCheckBoxStyle}"
                                                      ToolTip="重启或崩溃后恢复之前打开的窗口" />
                                            <CheckBox x:Name="CbHideTrayIcon" Content="隐藏托盘图标"
                                                      Style="{StaticResource CustomCheckBoxStyle}"
                                                      ToolTip="隐藏系统托盘图标" />
                                        </StackPanel>
                                    </GroupBox>
                                </StackPanel>
                            </TabItem>

                            <!-- 关于标签页 -->
                            <TabItem Header="关于" Visibility="Collapsed">
                                <local:AboutView />
                            </TabItem>
                        </TabControl>
                    </Grid>
                </Grid>
            </Grid>

            <!-- 状态栏 -->
            <Border Grid.Row="2" Background="{StaticResource ControlBackgroundBrush}" BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0" CornerRadius="0,0,4,4">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="8,4">
                        <!-- 窗口钩子状态 -->
                        <StackPanel Orientation="Horizontal" Margin="8,0">
                            <Ellipse Width="12" Height="12" Margin="0,0,6,0" StrokeThickness="1">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="{StaticResource StatusInactiveBrush}" />
                                        <Setter Property="Stroke" Value="{StaticResource BorderBrush}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=(managers:SettingsManager.IsWindowHookActive)}" Value="True">
                                                <Setter Property="Fill" Value="{StaticResource StatusActiveBrush}" />
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect ShadowDepth="0" BlurRadius="8"
                                                                          Color="{StaticResource StatusActiveColor}" Opacity="0.7" />
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="窗口钩子" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" />
                        </StackPanel>

                        <!-- 复用标签页状态 -->
                        <StackPanel Orientation="Horizontal" Margin="8,0">
                            <Ellipse Width="12" Height="12" Margin="0,0,6,0" StrokeThickness="1">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="{StaticResource StatusInactiveBrush}" />
                                        <Setter Property="Stroke" Value="{StaticResource BorderBrush}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=(managers:SettingsManager.ReuseTabs)}" Value="True">
                                                <Setter Property="Fill" Value="{StaticResource StatusActiveBrush}" />
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect ShadowDepth="0" BlurRadius="8"
                                                                          Color="{StaticResource StatusActiveColor}" Opacity="0.7" />
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="复用标签页" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" />
                        </StackPanel>

                        <!-- 键盘钩子状态 -->
                        <StackPanel Orientation="Horizontal" Margin="8,0">
                            <Ellipse Width="12" Height="12" Margin="0,0,6,0" StrokeThickness="1">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="{StaticResource StatusInactiveBrush}" />
                                        <Setter Property="Stroke" Value="{StaticResource BorderBrush}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=(managers:SettingsManager.IsKeyboardHookActive)}" Value="True">
                                                <Setter Property="Fill" Value="{StaticResource StatusActiveBrush}" />
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect ShadowDepth="0" BlurRadius="8"
                                                                          Color="{StaticResource StatusActiveColor}" Opacity="0.7" />
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="键盘钩子" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" />
                        </StackPanel>

                        <!-- 鼠标钩子状态 -->
                        <StackPanel Orientation="Horizontal" Margin="8,0">
                            <Ellipse Width="12" Height="12" Margin="0,0,6,0" StrokeThickness="1">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="{StaticResource StatusInactiveBrush}" />
                                        <Setter Property="Stroke" Value="{StaticResource BorderBrush}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=(managers:SettingsManager.IsMouseHookActive)}" Value="True">
                                                <Setter Property="Fill" Value="{StaticResource StatusActiveBrush}" />
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect ShadowDepth="0" BlurRadius="8"
                                                                          Color="{StaticResource StatusActiveColor}" Opacity="0.7" />
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="鼠标钩子" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>